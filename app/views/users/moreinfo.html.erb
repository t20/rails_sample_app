<h1>More info</h1>

<%= form_for :user do |f| %>
  
  <%= render 'shared/error_messages' %>
  
  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>
  
  <div class="field">
    <%= f.label :birth_date %><br />
    <%= f.date_select :birth_date %>
  </div>
  
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
